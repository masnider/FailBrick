<?xml version="1.0" encoding="utf-8"?>
<ApplicationManifest xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" ApplicationTypeName="FailBrickApplication" ApplicationTypeVersion="1.0.0" xmlns="http://schemas.microsoft.com/2011/01/fabric">
  <Parameters>
    <Parameter Name="FailBrick_MinReplicaSetSize" DefaultValue="3" />
    <Parameter Name="FailBrick_PartitionCount" DefaultValue="2" />
    <Parameter Name="FailBrick_TargetReplicaSetSize" DefaultValue="3" />
    <Parameter Name="FailureMode" DefaultValue="" />
  </Parameters>
  <ServiceManifestImport>
    <ServiceManifestRef ServiceManifestName="FailBrickServiceTypePkg" ServiceManifestVersion="1.0.0" />
    <ConfigOverrides>
      <ConfigOverride Name="Config">
        <Settings>
          <Section Name="FailureModes">
            <Parameter Name="Mode" Value="[FailureMode]" />
          </Section>
        </Settings>
      </ConfigOverride>
    </ConfigOverrides>
  </ServiceManifestImport>
  <DefaultServices>
    <!-- The section below creates instances of service types, when an instance of this 
         application type is created. You can also create one or more instances of service type using the 
         ServiceFabric PowerShell module.
         
         The attribute ServiceTypeName below must match the name defined in the imported ServiceManifest.xml file. -->
    <Service Name="FailBrick">
      <StatefulService ServiceTypeName="FailBrickServiceType" TargetReplicaSetSize="[FailBrick_TargetReplicaSetSize]" MinReplicaSetSize="[FailBrick_MinReplicaSetSize]">
        <UniformInt64Partition PartitionCount="[FailBrick_PartitionCount]" LowKey="1" HighKey="4" />
      </StatefulService>
    </Service>
  </DefaultServices>
</ApplicationManifest>